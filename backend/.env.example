# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/echohub?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Google Gemini AI (2.5 Flash)
GEMINI_API_KEY=your-gemini-api-key

# File Storage (AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=echohub-files
# For Cloudflare R2, use R2 endpoint URL
AWS_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@echohub.com

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
